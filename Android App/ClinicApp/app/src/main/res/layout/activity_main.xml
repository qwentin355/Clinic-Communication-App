<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg_png"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etHealthCardNo"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/cust_text"
        android:drawableLeft="@drawable/hc_icon"
        android:drawablePadding="15dp"
        android:ems="10"
        android:hint="@string/health_card_hint"
        android:inputType="text"
        android:maxLength="9"
        android:paddingLeft="15dp"
        app:layout_constraintEnd_toEndOf="@+id/ivLogo"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/ivLogo"
        app:layout_constraintTop_toBottomOf="@+id/ivLogo" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/cust_text"
        android:drawableLeft="@drawable/pw_icon"
        android:drawablePadding="15dp"
        android:ems="10"
        android:hint="@string/pw_hint"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        app:layout_constraintEnd_toEndOf="@+id/etHealthCardNo"
        app:layout_constraintStart_toStartOf="@+id/etHealthCardNo"
        app:layout_constraintTop_toBottomOf="@+id/etHealthCardNo" />


    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="271dp"
        android:layout_height="227dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="82dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/clinic_logo" />


    <ImageButton
        android:id="@+id/imgBtnLogin"
        android:layout_width="63dp"
        android:layout_height="53dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTimer"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/login" />

    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="267dp"
        android:layout_height="31dp"
        android:layout_marginTop="4dp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>